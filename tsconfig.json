{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "target": "esnext",
        "watch": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*", "src/*", "test/*"]
        }
    },
    "include": ["src", "./egret"],
    "exclude": ["node_modules"]
}
